<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- caregiver+ icon-->
    <ImageView
        android:layout_width="42dp"
        android:layout_height="47dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:clipToOutline="true"
        android:background="@drawable/icon" />
    <!-- caregiver+ -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="30dp"
        android:gravity="top"
        android:text="@string/caregiver_"
        android:textAppearance="@style/caregiver_mini"
        tools:ignore="DuplicateIds" />


    <!-- 다음 버튼 -->

    <EditText
        android:id="@+id/certificationcode"
        android:layout_width="276dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="72dp"
        android:layout_marginLeft="72dp"
        android:layout_marginTop="275dp"
        android:layout_marginEnd="61dp"
        android:background="@drawable/stroke"
        android:elevation="4dp"
        android:hint="인 증 번 호"
        android:textAlignment="center"
        android:textSize="15sp" />

    <Button
        android:id="@+id/certifying_button"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@+id/certificationcode"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="83dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="47dp"
        android:layout_marginBottom="276dp"
        android:layout_toStartOf="@+id/cancel_button"
        android:background="@drawable/stroke_fillgray"
        android:elevation="4dp"
        android:text="확인"
        android:textSize="20dp" />

    <Button
        android:id="@+id/cancel_button"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@+id/certificationcode"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="81dp"
        android:background="@drawable/stroke_fillgray"
        android:elevation="4dp"
        android:text="취소"
        android:textSize="20dp" />

</RelativeLayout>




