            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="TextView Top"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textViewBottom_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewTop_one"
            android:layout_marginTop="6dp"
            android:gravity="center"
            android:text="TextView Bottom"
            android:textSize="15sp" />

        <Button
            android:id="@+id/accept_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewBottom_one"
            android:layout_alignParentStart="true"
            android:layout_marginStart="37dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="16dp"
            android:text="수락" />

        <Button
            android:id="@+id/check_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="37dp"
            android:layout_marginTop="6dp"
            android:layout_below="@id/textViewBottom_one"
            android:layout_toEndOf="@id/accept_one"
            android:text="보기" />

