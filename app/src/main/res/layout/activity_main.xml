<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- CareGiver+ icon -->
    <ImageView
        android:id="@+id/frame"
        android:layout_width="68dp"
        android:layout_height="76dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="63dp"
        android:layout_marginTop="136dp"
        android:background="@drawable/icon"
        android:clipToOutline="true" />

    <!-- CareGiver+ -->
    <TextView
        android:id="@+id/caregiver_"
        android:layout_width="229dp"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="143dp"
        android:layout_marginTop="150dp"
        android:gravity="top"
        android:text="@string/caregiver_"
        android:textAppearance="@style/caregiver_" />

    <!-- 로그인 버튼 -->
    <Button
        android:id="@+id/Main_login_button"
        android:layout_width="284dp"
        android:layout_height="54dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="64dp"
        android:layout_marginTop="382dp"
        android:src="@drawable/login_button"
        android:text="로그인"
        android:textSize="20dp"
        android:elevation="4dp" />

    <!-- 비번찾기 -->


    <Button
        android:id="@+id/Main_findPw_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="101dp"
        android:layout_marginTop="460dp"
        android:background="#FFFFFF"
        android:text="@string/find_password"
        android:textAlignment="center"
        android:textAppearance="@style/find_password" />
    <!-- 회원가입 -->
    <Button
        android:id="@+id/Main_signUp_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="231dp"
        android:layout_marginTop="459dp"
        android:background="#FFFFFF"
        android:text="@string/sign_up"
        android:textAlignment="center"
        android:textAppearance="@style/sign_up" />

</RelativeLayout>